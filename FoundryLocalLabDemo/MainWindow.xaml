<Window
    x:Class="FoundryLocalLabDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FoundryLocalLabDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Financial Aid Support Staff Tool"
    Width="1400"
    Height="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel: Student Message Inbox  -->
        <Grid Grid.Column="0" Margin="10">
            <GroupBox Padding="10" Header="Student Message Inbox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Inbox Header  -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Select a message to process:" />
                    </StackPanel>

                    <!--  Message List  -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="StudentMessagesItemsControl" ItemsSource="{Binding StudentMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="MessageItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="LightBlue" />
                                                        <Setter Property="BorderBrush" Value="DodgerBlue" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                        <Setter Property="Background" Value="LightYellow" />
                                                        <Setter Property="BorderBrush" Value="Orange" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsUrgent}" Value="True">
                                                        <Setter Property="BorderBrush" Value="Red" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!--  Header Row  -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Text="{Binding StudentName}" />

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock
                                                        Margin="0,0,5,0"
                                                        FontWeight="Bold"
                                                        Foreground="Red"
                                                        Text="URGENT">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUrgent}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding TimeAgo}" />
                                                </StackPanel>
                                            </Grid>

                                            <!--  Student ID  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,2,0,0"
                                                FontSize="11"
                                                Foreground="Gray"
                                                Text="{Binding StudentId, StringFormat='ID: {0}'}" />

                                            <!--  Subject  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,5,0,5"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Text="{Binding Subject}" />

                                            <!--  Message Preview  -->
                                            <TextBlock
                                                Grid.Row="3"
                                                MaxHeight="60"
                                                FontSize="11"
                                                Foreground="DarkSlateGray"
                                                Text="{Binding MessageText}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />

                                            <!--  Processing Indicator  -->
                                            <Grid Grid.Row="0" Grid.RowSpan="4">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Rectangle Fill="LightYellow" Opacity="0.7" />
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    Foreground="Orange"
                                                    Text="Processing..." />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Left Vertical Splitter  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="LightGray" />

        <!--  Middle Panel: AI Model Selection (Unchanged)  -->
        <Grid Grid.Column="2" Margin="10">
            <GroupBox Padding="10" Header="AI Model Selection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Model Selection Header  -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button
                            x:Name="RefreshModelsButton"
                            Height="30"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            Click="RefreshModelsButton_Click"
                            Content="Refresh Models" />
                    </StackPanel>

                    <!--  Downloaded Models Section  -->
                    <GroupBox
                        Grid.Row="1"
                        Margin="0,0,0,5"
                        Padding="5"
                        Header="Downloaded Models">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="DownloadedModelsItemsControl" ItemsSource="{Binding DownloadedModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="2"
                                            Padding="6"
                                            Background="White"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ModelItem_Click"
                                            Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                            <Setter Property="Background" Value="LightGreen" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                            <Setter Property="Background" Value="LightCyan" />
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue" />
                                                            <Setter Property="BorderThickness" Value="2" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock
                                                        FontSize="11"
                                                        FontWeight="Bold"
                                                        Text="{Binding Name}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        FontSize="9"
                                                        Foreground="Gray"
                                                        Text="{Binding DeviceType, StringFormat='Device: {0}'}"
                                                        TextWrapping="Wrap" />

                                                    <!--  Status Display for Downloaded Models  -->
                                                    <StackPanel Margin="0,1,0,0" Orientation="Horizontal">
                                                        <!--  Ready/Loaded State  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock
                                                                Margin="0,0,3,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="7"
                                                                Foreground="Green"
                                                                Text="●" />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="Green"
                                                                Text="Ready" />
                                                        </StackPanel>

                                                        <!--  Loading into memory  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="Cyan"
                                                                Text="Loading..." />
                                                        </StackPanel>

                                                        <!--  Click to load  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock
                                                                Margin="0,0,3,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="7"
                                                                Foreground="Blue"
                                                                Text="●" />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="Blue"
                                                                Text="Click to load" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>

                                                <RadioButton
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    GroupName="ModelSelection"
                                                    IsHitTestVisible="False"
                                                    Tag="{Binding Name}">
                                                    <RadioButton.IsChecked>
                                                        <MultiBinding Converter="{x:Static local:ModelSelectionConverter.Instance}">
                                                            <Binding Path="Name" />
                                                            <Binding Path="DataContext.SelectedModelName" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                        </MultiBinding>
                                                    </RadioButton.IsChecked>
                                                </RadioButton>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!--  Separator  -->
                    <GridSplitter
                        Grid.Row="2"
                        Height="3"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="LightGray" />

                    <!--  Available for Download Models Section  -->
                    <GroupBox
                        Grid.Row="3"
                        Margin="0,5,0,0"
                        Padding="5"
                        Header="Available for Download">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="AvailableForDownloadModelsItemsControl" ItemsSource="{Binding AvailableForDownloadModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="2"
                                            Padding="6"
                                            Background="White"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ModelItem_Click"
                                            Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                            <Setter Property="Background" Value="LightYellow" />
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue" />
                                                            <Setter Property="BorderThickness" Value="2" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock
                                                        FontSize="11"
                                                        FontWeight="Bold"
                                                        Text="{Binding Name}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        FontSize="9"
                                                        Foreground="Gray"
                                                        Text="{Binding DeviceType, StringFormat='Device: {0}'}"
                                                        TextWrapping="Wrap" />

                                                    <!--  Status Display for Available Models  -->
                                                    <StackPanel Margin="0,1,0,0" Orientation="Horizontal">
                                                        <!--  Downloading  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="Orange"
                                                                Text="{Binding DownloadStatus}" />
                                                        </StackPanel>

                                                        <!--  Click to download  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="Blue"
                                                                Text="Click to download" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!--  Download Progress Bar  -->
                                                    <ProgressBar
                                                        Height="3"
                                                        Margin="0,1,0,0"
                                                        Maximum="100"
                                                        Value="{Binding DownloadProgress}">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="ProgressBar">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                    </ProgressBar>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!--  Model Status  -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock
                            x:Name="SelectedModelText"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="Red"
                            Text="No model selected" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Right Vertical Splitter  -->
        <GridSplitter
            Grid.Column="3"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="LightGray" />

        <!--  Right Panel: Student Profile Form  -->
        <Grid Grid.Column="4" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Student Profile Form  -->
            <GroupBox
                Grid.Row="0"
                Padding="10"
                Header="Student Profile">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!--  Message Preview  -->
                            <Label
                                Margin="0,0,0,5"
                                Content="Original Message:"
                                FontWeight="Bold" />
                            <Border
                                Padding="10"
                                Background="AliceBlue"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    MaxHeight="150"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding SelectedMessage.MessageText}"
                                    TextWrapping="Wrap" />
                            </Border>

                            <!--  First Name  -->
                            <StackPanel Margin="0,20,0,5" Orientation="Horizontal">
                                <Label Width="120" Content="First Name:" />
                                <TextBox x:Name="FirstNameTextBox" Width="200" />
                            </StackPanel>

                            <!--  Last Name  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Last Name:" />
                                <TextBox x:Name="LastNameTextBox" Width="200" />
                            </StackPanel>

                            <!--  Citizenship Status  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Citizenship Status:" />
                                <ComboBox x:Name="CitizenshipStatusComboBox" Width="200">
                                    <ComboBoxItem Content="U.S. Citizen" />
                                    <ComboBoxItem Content="Permanent Resident" />
                                    <ComboBoxItem Content="Non-Resident Alien" />
                                    <ComboBoxItem Content="Other" />
                                </ComboBox>
                            </StackPanel>

                            <!--  SSN  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="SSN:" />
                                <TextBox x:Name="SSNTextBox" Width="200" />
                            </StackPanel>

                            <!--  High School Status  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="High School Status:" />
                                <ComboBox x:Name="HighSchoolStatusComboBox" Width="200">
                                    <ComboBoxItem Content="Graduated" />
                                    <ComboBoxItem Content="Not Graduated" />
                                    <ComboBoxItem Content="GED" />
                                    <ComboBoxItem Content="Other" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Federal Loan Issues  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Federal Loan Issues:" />
                                <CheckBox
                                    x:Name="HasFederalLoanIssuesCheckBox"
                                    VerticalAlignment="Center"
                                    Content="Has previous issues" />
                            </StackPanel>

                            <!--  GPA  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="GPA:" />
                                <TextBox x:Name="GPATextBox" Width="100" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Processing Overlay  -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessingProfile}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Rectangle Fill="LightYellow" Opacity="0.8" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Orange"
                                Text="Processing Profile..." />
                            <TextBlock
                                x:Name="TextBlockProcessingMessageDetails"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="DarkOrange"
                                Text="Extracting information from message..."
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>

            <!--  Status Bar  -->
            <StatusBar Grid.Row="1" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Ready" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
