<Window x:Class="FoundryLocalLabDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoundryLocalLabDemo"
        mc:Ignorable="d"
        Title="Financial Aid Eligibility Chat" Height="800" Width="1400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Student Information -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- Upper Left: Eligibility Requirements -->
            <GroupBox Grid.Row="0" Header="Eligibility Requirements" Padding="10">
                <TextBox x:Name="EligibilityRequirementsTextBox" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         Text="Financial Aid Eligibility Requirements:&#x0a;&#x0a;• Must be a U.S. citizen or eligible noncitizen&#x0a;• Must have a valid Social Security Number&#x0a;• Must have a high school diploma or GED&#x0a;• Must not be in default on federal student loans&#x0a;• Must maintain satisfactory academic progress (SAP)&#x0a;• GPA must be above 2.0&#x0a;• Must not have any classes with 1.0 or lower&#x0a;• Must not owe refund on federal grants&#x0a;• Must be enrolled in an eligible program&#x0a;• Must not have drug-related convictions affecting eligibility"/>
            </GroupBox>
            
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="5" Background="LightGray"/>
            
            <!-- Lower Left: Student Information -->
            <GroupBox Grid.Row="2" Header="Student Information" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Student Selector -->
                        <Label Content="Select Student:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="StudentSelector" Margin="0,0,0,10" SelectionChanged="StudentSelector_SelectionChanged">
                            <ComboBoxItem Content="Sarah Johnson - Pre-Med Student" Tag="sarah"/>
                            <ComboBoxItem Content="Mike Rodriguez - Engineering Student" Tag="mike"/>
                            <ComboBoxItem Content="Ashley Chen - Business Student" Tag="ashley"/>
                        </ComboBox>
                        
                        <!-- Student Profile Information -->
                        <Label Content="Student Profile:" FontWeight="Bold" Margin="0,10,0,5"/>
                        
                        <!-- Citizenship Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Citizenship Status:" Width="120"/>
                            <ComboBox x:Name="CitizenshipStatusComboBox" Width="160">
                                <ComboBoxItem Content="U.S. Citizen"/>
                                <ComboBoxItem Content="Eligible Noncitizen"/>
                                <ComboBoxItem Content="Not Eligible"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- SSN -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Has Valid SSN:" Width="120"/>
                            <CheckBox x:Name="HasSSNCheckBox" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- High School Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="High School Status:" Width="120"/>
                            <ComboBox x:Name="HighSchoolStatusComboBox" Width="160">
                                <ComboBoxItem Content="High School Graduate"/>
                                <ComboBoxItem Content="GED Holder"/>
                                <ComboBoxItem Content="Neither"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Federal Loan Issues -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Federal Loan Issues:" Width="120"/>
                            <CheckBox x:Name="HasLoanIssuesCheckBox" Content="Has active issues" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- GPA Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Current GPA:" Width="120"/>
                            <TextBox x:Name="GPATextBox" Width="80" Text="3.5"/>
                        </StackPanel>
                        
                        <!-- Low Grades -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Has Grades ≤ 1.0:" Width="120"/>
                            <CheckBox x:Name="HasLowGradesCheckBox" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        
        <!-- Left Vertical Splitter -->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="5" Background="LightGray"/>
        
        <!-- Middle Panel: AI Model Selection -->
        <Grid Grid.Column="2" Margin="10">
            <GroupBox Header="AI Model Selection" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Model Selection Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button x:Name="RefreshModelsButton" 
                                Content="Refresh Models" 
                                Click="RefreshModelsButton_Click" 
                                HorizontalAlignment="Stretch"
                                Height="30"
                                Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <!-- Downloaded Models Section -->
                    <GroupBox Grid.Row="1" Header="Downloaded Models" Padding="5" Margin="0,0,0,5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="DownloadedModelsItemsControl" 
                                          ItemsSource="{Binding DownloadedModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" 
                                                Padding="6" 
                                                CornerRadius="4"
                                                BorderBrush="LightGray" 
                                                BorderThickness="1"
                                                Background="White"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ModelItem_Click"
                                                Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                            <Setter Property="Background" Value="LightGreen"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                            <Setter Property="Background" Value="LightCyan"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="11"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DeviceType, StringFormat='Device: {0}'}" 
                                                               FontSize="9" 
                                                               Foreground="Gray"
                                                               TextWrapping="Wrap"/>
                                                    <!-- Status Display for Downloaded Models -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                                        <!-- Ready/Loaded State -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="●" Foreground="Green" FontSize="7" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                            <TextBlock Text="Ready" FontSize="9" Foreground="Green"/>
                                                        </StackPanel>
                                                    
                                                        <!-- Loading into memory -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="Loading..." FontSize="9" Foreground="Cyan"/>
                                                        </StackPanel>
                                                    
                                                        <!-- Click to load -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="●" Foreground="Blue" FontSize="7" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                            <TextBlock Text="Click to load" FontSize="9" Foreground="Blue"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <RadioButton Grid.Column="1" 
                                                             GroupName="ModelSelection"
                                                             Tag="{Binding Name}"
                                                             VerticalAlignment="Center"
                                                             IsHitTestVisible="False">
                                                    <RadioButton.IsChecked>
                                                        <MultiBinding Converter="{x:Static local:ModelSelectionConverter.Instance}">
                                                            <Binding Path="Name"/>
                                                            <Binding Path="DataContext.SelectedModelName" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </RadioButton.IsChecked>
                                                </RadioButton>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    
                    <!-- Separator -->
                    <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="3" Background="LightGray" Margin="0,5"/>
                    
                    <!-- Available for Download Models Section -->
                    <GroupBox Grid.Row="3" Header="Available for Download" Padding="5" Margin="0,5,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="AvailableForDownloadModelsItemsControl" 
                                          ItemsSource="{Binding AvailableForDownloadModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" 
                                                Padding="6" 
                                                CornerRadius="4"
                                                BorderBrush="LightGray" 
                                                BorderThickness="1"
                                                Background="White"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ModelItem_Click"
                                                Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                            <Setter Property="Background" Value="LightYellow"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="11"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DeviceType, StringFormat='Device: {0}'}" 
                                                               FontSize="9" 
                                                               Foreground="Gray"
                                                               TextWrapping="Wrap"/>
                                                    
                                                    <!-- Status Display for Available Models -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                                        <!-- Downloading -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="{Binding DownloadStatus}" FontSize="9" Foreground="Orange"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Click to download -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="Click to download" FontSize="9" Foreground="Blue"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                
                                                    <!-- Download Progress Bar -->
                                                    <ProgressBar Height="3" Margin="0,1,0,0" 
                                                               Value="{Binding DownloadProgress}" 
                                                               Maximum="100">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="ProgressBar">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                    </ProgressBar>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    
                    <!-- Model Status -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock x:Name="SelectedModelText" 
                                   Text="No model selected" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="Red"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Right Vertical Splitter -->
        <GridSplitter Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="5" Background="LightGray"/>
        
        <!-- Right Panel: Chat Interface -->
        <Grid Grid.Column="4" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Chat History -->
            <GroupBox Grid.Row="0" Header="Financial Aid Chat" Padding="10">
                <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ChatMessagesItemsControl" 
                                  ItemsSource="{Binding ChatMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="10" 
                                        CornerRadius="8"
                                        MaxWidth="400">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="LightBlue"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                    <Setter Property="Background" Value="LightGreen"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Text}" 
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="●" 
                                                   Foreground="Gray" 
                                                   FontSize="8"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsStreaming}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock.RenderTransform>
                                                <RotateTransform x:Name="StreamingIndicator" CenterX="4" CenterY="4"/>
                                            </TextBlock.RenderTransform>
                                            <TextBlock.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="StreamingIndicator"
                                                                           Storyboard.TargetProperty="Angle"
                                                                           From="0" To="360" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </TextBlock.Triggers>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
            
            <!-- Chat Input -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="ChatInputTextBox" 
                         Grid.Column="0" 
                         Height="60" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="ChatInputTextBox_KeyDown"
                         Margin="0,0,10,0"/>
                
                <Button x:Name="SendButton" 
                        Grid.Column="1" 
                        Content="Send" 
                        Width="80" 
                        Height="60" 
                        Click="SendButton_Click"
                        Margin="0,0,10,0"
                        IsEnabled="False"/>
                
                <Button x:Name="CancelButton" 
                        Grid.Column="2" 
                        Content="Cancel" 
                        Width="80" 
                        Height="60" 
                        Click="CancelButton_Click"
                        Visibility="Collapsed"
                        Background="LightCoral"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="ResetChatButton" 
                        Grid.Column="3" 
                        Content="Reset Chat" 
                        Width="80" 
                        Height="60" 
                        Click="ResetChatButton_Click"
                        Background="LightSteelBlue"
                        ToolTip="Clear chat history and start fresh"/>
            </Grid>
            
            <!-- Status Bar -->
            <StatusBar Grid.Row="2" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Ready"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
