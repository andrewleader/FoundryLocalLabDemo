<Window
    x:Class="FoundryLocalLabDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FoundryLocalLabDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Financial Aid Support Staff Tool"
    Width="1400"
    Height="800"
    mc:Ignorable="d">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel: Student Message Inbox  -->
        <Grid Grid.Column="0" Margin="12,0">
            <GroupBox Header="Student Message Inbox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Message List  -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            x:Name="StudentMessagesItemsControl"
                            Margin="0,0,12,0"
                            ItemsSource="{Binding StudentMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,5"
                                        Padding="12"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="MessageItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUrgent}" Value="True">
                                                        <Setter Property="BorderBrush" Value="Red" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource TextControlElevationBorderFocusedBrush}" />
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Header Row  -->
                                            <TextBlock
                                                Grid.Column="0"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                                Text="{Binding StudentName}" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="0,-2,8,0"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="Red"
                                                Text="URGENT"
                                                Visibility="{Binding IsUrgent, Converter={StaticResource BoolToVisibilityConverter}}" />

                                            <TextBlock
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                FontSize="11"
                                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                Text="{Binding TimeAgo}" />

                                            <!--  Student ID  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Grid.ColumnSpan="2"
                                                Margin="0,2,0,0"
                                                HorizontalAlignment="Right"
                                                FontSize="11"
                                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                Text="{Binding StudentId, StringFormat='ID: {0}'}" />

                                            <!--  Subject  -->
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,5,0,5"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{Binding Subject}" />

                                            <!--  Message Preview  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.ColumnSpan="3"
                                                MaxHeight="60"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{Binding MessageText}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />

                                            <!--  Processing Indicator  -->
                                            <TextBlock
                                                    Grid.Row="0"
Grid.RowSpan="4"
Grid.ColumnSpan="3"
Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                                    Text="Processing..." />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Left Vertical Splitter  -->
        <GridSplitter Grid.Column="1" />

        <!--  Middle Panel: AI Model Selection (Unchanged)  -->
        <Grid Grid.Column="2" Margin="8,0">
            <GroupBox Header="AI Model Selection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Model Selection Header  -->
                    <Button
                        x:Name="RefreshModelsButton"
                        Margin="0,0,0,12"
                        HorizontalAlignment="Stretch"
                        Click="RefreshModelsButton_Click"
                        Content="Refresh Models" />

                    <TextBlock
                        Grid.Row="1"
                        Margin="0,0,0,8"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Downloaded Models" />

                    <!--  Downloaded Models Section  -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DownloadedModelsItemsControl" ItemsSource="{Binding DownloadedModels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Padding="4"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ModelItem_Click"
                                        Tag="{Binding Name}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                        <Setter Property="Background" Value="LightGreen" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                        <Setter Property="Background" Value="LightCyan" />
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="DodgerBlue" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    FontSize="9"
                                                    Foreground="Gray"
                                                    Text="{Binding DeviceType, StringFormat='Device: {0}'}"
                                                    TextWrapping="Wrap" />

                                                <!--  Status Display for Downloaded Models  -->
                                                <StackPanel Margin="0,1,0,0" Orientation="Horizontal">
                                                    <!--  Ready/Loaded State  -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock
                                                            Margin="0,0,3,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="7"
                                                            Foreground="Green"
                                                            Text="●" />
                                                        <TextBlock
                                                            FontSize="9"
                                                            Foreground="Green"
                                                            Text="Ready" />
                                                    </StackPanel>

                                                    <!--  Loading into memory  -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock
                                                            FontSize="9"
                                                            Foreground="Cyan"
                                                            Text="Loading..." />
                                                    </StackPanel>

                                                    <!--  Click to load  -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock
                                                            Margin="0,0,3,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="7"
                                                            Foreground="Blue"
                                                            Text="●" />
                                                        <TextBlock
                                                            FontSize="9"
                                                            Foreground="Blue"
                                                            Text="Click to load" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <RadioButton
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                GroupName="ModelSelection"
                                                IsHitTestVisible="False"
                                                Tag="{Binding Name}">
                                                <RadioButton.IsChecked>
                                                    <MultiBinding Converter="{x:Static local:ModelSelectionConverter.Instance}">
                                                        <Binding Path="Name" />
                                                        <Binding Path="DataContext.SelectedModelName" RelativeSource="{RelativeSource AncestorType=Window}" />
                                                    </MultiBinding>
                                                </RadioButton.IsChecked>
                                            </RadioButton>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--  Separator  -->
                    <GridSplitter Grid.Row="3" />

                    <TextBlock
                        Grid.Row="4"
                        Margin="0,0,0,8"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Available for Download" />

                    <!--  Available for Download Models Section  -->
                    <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="AvailableForDownloadModelsItemsControl" ItemsSource="{Binding AvailableForDownloadModels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="2"
                                        Padding="6"
                                        Background="White"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ModelItem_Click"
                                        Tag="{Binding Name}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                        <Setter Property="Background" Value="LightYellow" />
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="DodgerBlue" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    FontSize="9"
                                                    Foreground="Gray"
                                                    Text="{Binding DeviceType, StringFormat='Device: {0}'}"
                                                    TextWrapping="Wrap" />

                                                <!--  Status Display for Available Models  -->
                                                <StackPanel Margin="0,1,0,0" Orientation="Horizontal">
                                                    <!--  Downloading  -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock
                                                            FontSize="9"
                                                            Foreground="Orange"
                                                            Text="{Binding DownloadStatus}" />
                                                    </StackPanel>

                                                    <!--  Click to download  -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBlock
                                                            FontSize="9"
                                                            Foreground="Blue"
                                                            Text="Click to download" />
                                                    </StackPanel>
                                                </StackPanel>

                                                <!--  Download Progress Bar  -->
                                                <ProgressBar
                                                    Height="3"
                                                    Margin="0,1,0,0"
                                                    Maximum="100"
                                                    Value="{Binding DownloadProgress}">
                                                    <ProgressBar.Style>
                                                        <Style TargetType="ProgressBar">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ProgressBar.Style>
                                                </ProgressBar>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--  Model Status  -->
                    <TextBlock
                        x:Name="SelectedModelText"
                        Grid.Row="6"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="No model selected" />
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Right Vertical Splitter  -->
        <GridSplitter Grid.Column="3" />

        <!--  Right Panel: Student Profile Form  -->
        <Grid Grid.Column="4" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Student Profile Form  -->
            <GroupBox
                Grid.Row="0"
                Padding="10"
                Header="Student Profile">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!--  Message Preview  -->
                            <Label
                                Margin="0,0,0,5"
                                Content="Original Message:"
                                FontWeight="Bold" />
                            <Border
                                Padding="10"
                                Background="AliceBlue"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    MaxHeight="150"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding SelectedMessage.MessageText}"
                                    TextWrapping="Wrap" />
                            </Border>

                            <!--  First Name  -->
                            <StackPanel Margin="0,20,0,5" Orientation="Horizontal">
                                <Label Width="120" Content="First Name:" />
                                <TextBox x:Name="FirstNameTextBox" Width="200" />
                            </StackPanel>

                            <!--  Last Name  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Last Name:" />
                                <TextBox x:Name="LastNameTextBox" Width="200" />
                            </StackPanel>

                            <!--  Citizenship Status  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Citizenship Status:" />
                                <ComboBox x:Name="CitizenshipStatusComboBox" Width="200">
                                    <ComboBoxItem Content="U.S. Citizen" />
                                    <ComboBoxItem Content="Permanent Resident" />
                                    <ComboBoxItem Content="Non-Resident Alien" />
                                    <ComboBoxItem Content="Other" />
                                </ComboBox>
                            </StackPanel>

                            <!--  SSN  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="SSN:" />
                                <TextBox x:Name="SSNTextBox" Width="200" />
                            </StackPanel>

                            <!--  High School Status  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="High School Status:" />
                                <ComboBox x:Name="HighSchoolStatusComboBox" Width="200">
                                    <ComboBoxItem Content="Graduated" />
                                    <ComboBoxItem Content="Not Graduated" />
                                    <ComboBoxItem Content="GED" />
                                    <ComboBoxItem Content="Other" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Federal Loan Issues  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="Federal Loan Issues:" />
                                <CheckBox
                                    x:Name="HasFederalLoanIssuesCheckBox"
                                    VerticalAlignment="Center"
                                    Content="Has previous issues" />
                            </StackPanel>

                            <!--  GPA  -->
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <Label Width="120" Content="GPA:" />
                                <TextBox x:Name="GPATextBox" Width="100" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Processing Overlay  -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessingProfile}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Rectangle Fill="LightYellow" Opacity="0.8" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Orange"
                                Text="Processing Profile..." />
                            <TextBlock
                                x:Name="TextBlockProcessingMessageDetails"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="DarkOrange"
                                Text="Extracting information from message..."
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>

            <!--  Status Bar  -->
            <StatusBar Grid.Row="1" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Ready" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
