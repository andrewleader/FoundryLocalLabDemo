<Window x:Class="FoundryLocalLabDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoundryLocalLabDemo"
        mc:Ignorable="d"
        Title="Financial Aid Support Staff Tool" Height="800" Width="1400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Student Message Inbox -->
        <Grid Grid.Column="0" Margin="10">
            <GroupBox Header="Student Message Inbox" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inbox Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Select a message to process:" FontWeight="Bold" Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <!-- Message List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="StudentMessagesItemsControl" 
                                      ItemsSource="{Binding StudentMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,5" 
                                            Padding="10" 
                                            CornerRadius="5"
                                            BorderBrush="LightGray" 
                                            BorderThickness="1"
                                            Background="White"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="MessageItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="LightBlue"/>
                                                        <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                        <Setter Property="Background" Value="LightYellow"/>
                                                        <Setter Property="BorderBrush" Value="Orange"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsUrgent}" Value="True">
                                                        <Setter Property="BorderBrush" Value="Red"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header Row -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding StudentName}" 
                                                           FontWeight="Bold" 
                                                           FontSize="14"/>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="URGENT" 
                                                               FontWeight="Bold" 
                                                               Foreground="Red"
                                                               Margin="0,0,5,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUrgent}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding TimeAgo}" 
                                                               FontSize="11" 
                                                               Foreground="Gray"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Student ID -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding StudentId, StringFormat='ID: {0}'}" 
                                                       FontSize="11" 
                                                       Foreground="Gray" 
                                                       Margin="0,2,0,0"/>
                                            
                                            <!-- Subject -->
                                            <TextBlock Grid.Row="2" 
                                                       Text="{Binding Subject}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="12"
                                                       Margin="0,5,0,5"/>
                                            
                                            <!-- Message Preview -->
                                            <TextBlock Grid.Row="3" 
                                                       Text="{Binding MessageText}" 
                                                       FontSize="11"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="60"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="DarkSlateGray"/>
                                            
                                            <!-- Processing Indicator -->
                                            <Grid Grid.Row="0" Grid.RowSpan="4">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Rectangle Fill="LightYellow" Opacity="0.7"/>
                                                <TextBlock Text="Processing..." 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Foreground="Orange"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Left Vertical Splitter -->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="5" Background="LightGray"/>
        
        <!-- Middle Panel: AI Model Selection (Unchanged) -->
        <Grid Grid.Column="2" Margin="10">
            <GroupBox Header="AI Model Selection" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Model Selection Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button x:Name="RefreshModelsButton" 
                                Content="Refresh Models" 
                                Click="RefreshModelsButton_Click" 
                                HorizontalAlignment="Stretch"
                                Height="30"
                                Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <!-- Downloaded Models Section -->
                    <GroupBox Grid.Row="1" Header="Downloaded Models" Padding="5" Margin="0,0,0,5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="DownloadedModelsItemsControl" 
                                          ItemsSource="{Binding DownloadedModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" 
                                                Padding="6" 
                                                CornerRadius="4"
                                                BorderBrush="LightGray" 
                                                BorderThickness="1"
                                                Background="White"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ModelItem_Click"
                                                Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                            <Setter Property="Background" Value="LightGreen"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                            <Setter Property="Background" Value="LightCyan"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="11"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DeviceType, StringFormat='Device: {0}'}" 
                                                               FontSize="9" 
                                                               Foreground="Gray"
                                                               TextWrapping="Wrap"/>
                                                
                                                    <!-- Status Display for Downloaded Models -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                                        <!-- Ready/Loaded State -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="●" Foreground="Green" FontSize="7" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                            <TextBlock Text="Ready" FontSize="9" Foreground="Green"/>
                                                        </StackPanel>
                                                    
                                                        <!-- Loading into memory -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="Loading..." FontSize="9" Foreground="Cyan"/>
                                                        </StackPanel>
                                                    
                                                        <!-- Click to load -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="●" Foreground="Blue" FontSize="7" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                            <TextBlock Text="Click to load" FontSize="9" Foreground="Blue"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <RadioButton Grid.Column="1" 
                                                             GroupName="ModelSelection"
                                                             Tag="{Binding Name}"
                                                             VerticalAlignment="Center"
                                                             IsHitTestVisible="False">
                                                    <RadioButton.IsChecked>
                                                        <MultiBinding Converter="{x:Static local:ModelSelectionConverter.Instance}">
                                                            <Binding Path="Name"/>
                                                            <Binding Path="DataContext.SelectedModelName" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </RadioButton.IsChecked>
                                                </RadioButton>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    
                    <!-- Separator -->
                    <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="3" Background="LightGray" Margin="0,5"/>
                    
                    <!-- Available for Download Models Section -->
                    <GroupBox Grid.Row="3" Header="Available for Download" Padding="5" Margin="0,5,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="AvailableForDownloadModelsItemsControl" 
                                          ItemsSource="{Binding AvailableForDownloadModels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" 
                                                Padding="6" 
                                                CornerRadius="4"
                                                BorderBrush="LightGray" 
                                                BorderThickness="1"
                                                Background="White"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ModelItem_Click"
                                                Tag="{Binding Name}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                            <Setter Property="Background" Value="LightYellow"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="11"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DeviceType, StringFormat='Device: {0}'}" 
                                                               FontSize="9" 
                                                               Foreground="Gray"
                                                               TextWrapping="Wrap"/>
                                                    
                                                    <!-- Status Display for Available Models -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                                        <!-- Downloading -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="{Binding DownloadStatus}" FontSize="9" Foreground="Orange"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Click to download -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock Text="Click to download" FontSize="9" Foreground="Blue"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                
                                                    <!-- Download Progress Bar -->
                                                    <ProgressBar Height="3" Margin="0,1,0,0" 
                                                               Value="{Binding DownloadProgress}" 
                                                               Maximum="100">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="ProgressBar">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                    </ProgressBar>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    
                    <!-- Model Status -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock x:Name="SelectedModelText" 
                                   Text="No model selected" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Foreground="Red"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Right Vertical Splitter -->
        <GridSplitter Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="5" Background="LightGray"/>
        
        <!-- Right Panel: Student Profile Form -->
        <Grid Grid.Column="4" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Student Profile Form -->
            <GroupBox Grid.Row="0" Header="Student Profile" Padding="10">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Message Preview -->
                            <Label Content="Original Message:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Background="AliceBlue">
                                <TextBlock Text="{Binding SelectedMessage.MessageText}" 
                                           TextWrapping="Wrap" 
                                           MaxHeight="150"
                                           ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </Border>
                            
                            <!-- First Name -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,5">
                                <Label Content="First Name:" Width="120"/>
                                <TextBox x:Name="FirstNameTextBox" Width="200"/>
                            </StackPanel>
                            
                            <!-- Last Name -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Last Name:" Width="120"/>
                                <TextBox x:Name="LastNameTextBox" Width="200"/>
                            </StackPanel>
                            
                            <!-- Citizenship Status -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Citizenship Status:" Width="120"/>
                                <ComboBox x:Name="CitizenshipStatusComboBox" Width="200">
                                    <ComboBoxItem Content="U.S. Citizen"/>
                                    <ComboBoxItem Content="Permanent Resident"/>
                                    <ComboBoxItem Content="Non-Resident Alien"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- SSN -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="SSN:" Width="120"/>
                                <TextBox x:Name="SSNTextBox" Width="200"/>
                            </StackPanel>
                            
                            <!-- High School Status -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="High School Status:" Width="120"/>
                                <ComboBox x:Name="HighSchoolStatusComboBox" Width="200">
                                    <ComboBoxItem Content="Graduated"/>
                                    <ComboBoxItem Content="Not Graduated"/>
                                    <ComboBoxItem Content="GED"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Federal Loan Issues -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Federal Loan Issues:" Width="120"/>
                                <CheckBox x:Name="HasFederalLoanIssuesCheckBox" Content="Has previous issues" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- GPA -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="GPA:" Width="120"/>
                                <TextBox x:Name="GPATextBox" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Processing Overlay -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessingProfile}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Rectangle Fill="LightYellow" Opacity="0.8"/>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Processing Profile..." 
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="Orange"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Extracting information from message..." 
                                       x:Name="TextBlockProcessingMessageDetails"
                                       FontSize="12"
                                       Foreground="DarkOrange"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>
            
            <!-- Status Bar -->
            <StatusBar Grid.Row="1" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Ready"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
